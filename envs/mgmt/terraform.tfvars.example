# MGMT Environment: 예시 변수 파일

# AWS 리전
aws_region = "ap-northeast-3"

# AWS 계정 ID (필수)
aws_account_id = "123456789012"

# 프로젝트 설정
project_name = "kyeol"
owner_prefix = "sol"
environment  = "mgmt"

# VPC CIDR (spec.md 기준)
vpc_cidr = "10.40.0.0/16"

# 가용영역 (Sydney)
azs = ["ap-northeast-3a", "ap-northeast-3c"]

# EKS 설정
eks_cluster_version     = "1.29"
eks_node_instance_types = ["t3.medium"]
eks_node_desired_size   = 2
eks_node_min_size       = 1
eks_node_max_size       = 3

# Route53 Hosted Zone ID (yesol.shop)
hosted_zone_id = "Z0XXXXXXXXXXXX"
