# DEV Environment: 예시 변수 파일
# 이 파일을 terraform.tfvars로 복사하고 실제 값을 입력하세요.

# AWS 리전 (오사카)
aws_region = "ap-northeast-3"

# AWS 계정 ID (필수)
aws_account_id = "827913617839"

# 프로젝트 설정
project_name = "kyeol"
owner_prefix = "sol"
environment  = "dev"

# VPC CIDR (spec.md 기준)
vpc_cidr = "10.10.0.0/16"

# 가용영역 (Osaka)
azs = ["ap-northeast-3a", "ap-northeast-3c"]

# EKS 설정
eks_cluster_version     = "1.29"
eks_node_instance_types = ["t3.medium"]
eks_node_desired_size   = 2
eks_node_min_size       = 1
eks_node_max_size       = 2

# RDS 설정 (DEV: 단일 AZ)
rds_instance_class = "db.t3.small"
rds_multi_az       = false

# Route53 Hosted Zone ID (yesol.shop)
# ExternalDNS가 origin-dev-kyeol.yesol.shop 레코드를 관리합니다.
hosted_zone_id = "Z0XXXXXXXXXXXX"
